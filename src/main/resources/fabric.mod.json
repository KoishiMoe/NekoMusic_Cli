{
  "schemaVersion": 1,
  "id": "nekomusiccli",
  "version": "${version}",
  "name": "NekoMusic Client",
  "description": "NekoMusic Server's client-side mod.",
  "authors": ["KoishiMoe"],
  "contact": {
    "repo": "https://github.com/KoishiMoe/NekoMusic_Cli_Reborn"
  },
  "license": "GPL-3.0",
  "icon": "assets/nekomusiccli/icon.png",
  "environment": "client",
  "entrypoints": {
    "client": [
      "org.lolicode.nekomusiccli.NekoMusicClient"
    ],
    "modmenu": [
      "org.lolicode.nekomusiccli.config.ModMenuIntegration"
    ],
    "sound-categories": [
      "org.lolicode.nekomusiccli.music.CustomSoundCategory"
    ]
  },
  "mixins": [
    "nekomusiccli.mixins.json"
  ],
  "depends": {
    "fabricloader": ">=${loader_version}",
    "fabric": "*",
    "minecraft": "${minecraft_version}",
    "badpackets": ">=0.4.1",
    "fabric-language-kotlin": "*",
    "cloth-config": ">=10.0.96"
  },
  "recommends": {
    "modmenu": ">=6.2.2"
  }
}
